<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1485846234645-a62644f84728?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1459&q=80);">
  <div class="container">
    <h1>Save your movie lists!</h1>
    <p>Classic</p>
  </div>
</div>

<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <div class="d-flex align-items-center justify-content-between">
        <h1>My lists</h1>
        <%= link_to('Create a movie list', new_list_path(@list), class: "btn btn-success") %>
      </div>
    </div>
  </div>

<div class="cards">
    <% @lists.each do |list| %>
  <% if list.photo.attached? %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_tag list.photo.key, height: 300, width: 400, crop: :fill %>')"
        <%= link_to(list.name, list_path(list), class: "text-decoration-none") %>>
      </div>
    <% end %>
  <% end %>
</div>
</div>
