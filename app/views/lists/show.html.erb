<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
  <%= link_to root_path, class: "navbar-brand" do %>
        <img src="https://thumbs.dreamstime.com/b/movie-film-company-logo-design-vector-template-movie-film-company-logo-design-inspiration-vector-template-167661473.jpg" />
      <% end %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <%= link_to root_path, class: "nav-link" do %>
              My Lists
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to new_list_path, class: "nav-link" do %>
              New List
            <% end %>
          </li>
      </ul>
    </div>
  </div>
</div>


<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1493804714600-6edb1cd93080?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80);">
  <div class="container">
      <h1 class="text-white text-center"><%= @list.name %> movies</h1>
  </div>
</div>


<div class="container mt-3 mb-5">
  <div class="row">
    <div class="col-12 mb-3">
        <%= link_to('add a movie', new_list_bookmark_path(@list), class: "btn btn-success text-white") %>
      </div>
    </div>

  <div class="bookmark-cards">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card-trip">
          <%= image_tag bookmark.movie.poster_url %>
            <div class="card-trip-infos">
              <div>
                <div class="d-flex">
                  <li class="list-group-item"><strong><%= bookmark.movie.title %></strong> || <%= bookmark.movie.rating %> <i class="fa-solid fa-star text-warning"></i></li>
                </div>
                <div class="mb-3">
                  <li class="list-group-item"><small class="text-black-50"><%= bookmark.movie.overview %></li></small>
                </div>
                <div class="d-flex justify-content-between">
                  <div class="d-flex">
                    <li class="list-group-item"><i class="fa-solid fa-quote-left"></i><%= bookmark.comment %>
                  </div>
                  <div class="d-flex align-items-center">
                    <%= link_to 'Delete',
                    bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "text-danger text-decoration-none" %></li>
                  </div>
                </div>
              </div>
            </div>
      </div>
    <% end %>
  </div>
</div>
